{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "sourceMap": true
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "tests"]
}
